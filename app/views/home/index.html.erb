<% content_for :title, "Bradley D Smith" %>

<!-- Feed -->

<div class="large-9 columns" role="content">
   
  <h4>Blog</h4><hr/>
  <% @posts.each do |post| %>
    <article>
    <h3><%= link_to post.try(:title), post %></h5>

    <h6 class="subheader">
      <%= truncate(strip_tags(post.content)) %>
    </h6>

    <h6> There are <%= post.try(:comments).size %> comment(s) </h6>
    <h6><%= link_to 'Read More Â»', post%></h6>
  </article>
  <% end %>
</div>

<!-- End Feed -->

